DEMO_MODE=true
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration (using SQLite for demo)
DATABASE_URL=sqlite:///./demo.db

# Neo4j Configuration (optional for demo)
